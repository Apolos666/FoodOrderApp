@model CartDetail

<li class="cart-item" data-id="@Model.Id">
    <div class="cart-item-info">
        <p class="cart-item-title">
            @Model.Food.Name
        </p>
        <span class="cart-item-price price" data-price="@Model.Food.Price">
            <span class="total-price" id="totalPrice" data-totalPrice="@(Model.Food.Price * Model.Quantity)">
                @(Model.Food.Price * Model.Quantity)Đ
            </span>
        </span>
    </div>
    <p class="product-note"><i class="fa-light fa-pencil"></i><span>@Model.Noted</span></p>
    <div class="cart-item-control">
        <button class="cart-item-delete" onclick="deleteCartItem(this)">Xóa</button>
        <div class="buttons_added">
            <input class="minus is-form" type="button" value="-" onclick="decreasingNumber(this)">
            <input class="input-qty" max="100" min="1" name="" type="number" value="@Model.Quantity" data-cart-detail-id="@Model.Id">
            <input class="plus is-form" type="button" value="+" onclick="increasingNumber(this)">
        </div>
    </div>
</li>
